<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232223"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="8"
    tools:context=".MainActivity">

    <EditText
        android:textAlignment="textEnd"
        android:id="@+id/etDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="#00ffffff"
        android:cursorVisible="true"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#6b0909"
        android:textIsSelectable="true"
        android:textSize="55sp"
        />

    <EditText
        android:textAlignment="textEnd"
        android:id="@+id/etSolution"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="#00ffffff"
        android:cursorVisible="false"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#6b0909"
        android:textIsSelectable="false"
        android:textSize="55sp"
         />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#6b0909"
        android:weightSum="5">

        <Button
            android:id="@+id/btnMod"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnMod"
            android:padding="10dp"
            android:text="%"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnPi"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnPi"
            android:padding="10dp"
            android:text="π"
            android:textColor="#000000"
            android:textSize="30sp" />



        <Button
            android:id="@+id/btnRoot"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnRoot"
            android:text="√"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnPower"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnPower"
            android:text="^"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnFact"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnFact"
            android:text="!"
            android:textColor="#000000"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#6b0909"
        android:weightSum="5">

        <Button
            android:id="@+id/btnNatLog"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnNatlog"
            android:text="ln"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnLog"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnLog"
            android:text="log"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnSin"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnSin"
            android:text="sin"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnCos"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnCos"
            android:text="cos"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnTan"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnTan"
            android:text="tan"
            android:textColor="#000000"
            android:textSize="30sp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnSeven"
            android:padding="10dp"
            android:text="7"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnEight"
            android:text="8"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnNine"
            android:text="9"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnAddition"
            android:text="+"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:onClick="btnBack"
            android:text="←"
            android:textColor="#6B0909"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnFour"
            android:padding="10dp"
            android:text="4"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnFive"
            android:text="5"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnSix"
            android:text="6"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnSubtraction"
            android:text="-"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnOpen"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnOpen"
            android:text="("
            android:textColor="#6B0909"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnOne"
            android:padding="10dp"
            android:text="1"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnTwo"
            android:text="2"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnThree"
            android:text="3"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnDivision"
            android:text="÷"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnClose"
            android:text=")"
            android:textColor="#6B0909"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnZero"
            android:padding="10dp"
            android:text="0"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnDot"
            android:text="."
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnClear"
            android:text="C"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnMultiplication"
            android:text="×"
            android:textColor="#6B0909"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="btnEquals"
            android:text="="
            android:textColor="#6B0909"
            android:textSize="30sp" />

    </LinearLayout>


</LinearLayout>
